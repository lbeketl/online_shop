<div class="container mx-auto">
  <h2
    class="text-gray-900 my-4 text- font-sans text-center font-bold text-4xl"
  >
    All Products
  </h2>
  <div class="flex flex-wrap justify-center">
    <% @products.each do |product| %>
     <%= render product %>
    <% end %>
  </div>
  <dir>
    <%= link_to "Create new Product", new_product_path, class: "my-4
      focus:outline-none text-white bg-green-700 hover:bg-green-800 focus:ring-4
      focus:ring-green-300 font-medium rounded-lg text-sm px-5 py-2.5 " %>
  </dir>
</div>
