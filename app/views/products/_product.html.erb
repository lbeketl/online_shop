<div class="mx-auto border rounded-lg shadow bg-gray-800 border-gray-700 m-3 w-96">
  <%= link_to product_path(product) do %>
    <%= image_tag "product-default.png", class: "w-96 h-96 mx-auto rounded-t-lg", alt: "product" %>
  <% end %>
  <div class="px-5 pb-5">
    <h5 class="text-xl font-semibold tracking-tight text-white">
      <%= product.name %>
    </h5>
    <h5 class="my-3 text-xl font-semibold tracking-tight text-white">
      <%= product.description %>
    </h5>
    <h5 class="text-xl font-semibold tracking-tight text-gray-500">
      <%= number_to_currency(product.price) %>
    </h5>
    <h5 class="my-3 text-xl font-semibold tracking-tight text-white">
      balance&nbsp;
      <%= product.balance %>
    </h5>
  </div>
</div>
