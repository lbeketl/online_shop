
<div class="container mx-auto">
  <h2 class="my-4 font-sans text-4xl font-bold text-center text-gray-900 text-">All Products</h2>
  <h1 class="text-red">
  </h1>
  <div class="flex flex-wrap justify-center">
    <% @products.each do |product| %>
      <div class="w-[170px]  border rounded-lg shadow bg-gray-800 border-gray-700 m-3">
        <%= link_to product do %>
          <%= image_tag "product-default.png", class: "w-[150px] h-[150px] mx-auto rounded-t-lg", alt: "product" %>
        <% end %>
        <div class="px-5 pb-5">
            <%= link_to product.name.truncate(9), product, class: "text-xl font-semibold tracking-tight text-white" %>
            <div class="flex flex-col items-start">
                <span class="my-3 text-xl font-bold text-gray-500">
                  $<%= product.price %>
                </span>
                <%= button_to 'Add to Cart', cart_path(id: product.id), class: "btn-primary", method: :post %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
