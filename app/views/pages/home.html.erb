
<div class="container mx-auto">
  <h2 class="text-gray-900 my-4 text- font-sans text-center font-bold text-4xl">All Products</h2>
  <h1 class="text-red">
  </h1>
  <div class="flex flex-wrap justify-center">
    <% @products.each do |product| %>
      <div class="w-[170px]  border rounded-lg shadow bg-gray-800 border-gray-700 m-3">
        <%= link_to product do %>
          <%= image_tag "product-default.png", class: "w-[150px] h-[150px] mx-auto rounded-t-lg", alt: "product" %>
        <% end %>
        <div class="px-5 pb-5">
            <%= link_to product.name.truncate(9), product, class: "text-xl font-semibold tracking-tight text-white" %>
            <div class="flex flex-col items-start">
                <span class="text-xl font-bold my-3 text-gray-500">
                  $<%= product.price %>
                </span>
                <%= button_to 'Add to Cart', add_to_cart_path(product.id), class: "text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-blue-600 hover:bg-blue-700 focus:ring-blue-800", method: :post %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
