<div class="w-44 border rounded-lg shadow bg-gray-800 border-gray-700 m-3 ">
  <%= link_to product do %>
    <%= image_tag "product-default.png", class: "w-40 h-40 mx-auto rounded-t-lg", alt: "product" %>
  <% end %>
  <div class="px-5 pb-5">
    <%= link_to product.name.truncate(9), product, class: "text-xl font-semibold tracking-tight text-white" %>
    <div class="flex flex-col items-start">
      <span class="my-3 text-xl font-bold text-gray-500">
        <%= number_to_currency(product.price) %>
      </span>
      <%= button_to 'Add to Cart', cart_path(product), class: "btn-primary", method: :post %>
    </div>
  </div>
</div>
