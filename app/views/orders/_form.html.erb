<%= simple_form_for order, html: { class: "w-[500px] mx-auto rounded-lg bg-gray-900 p-6 drop-shadow-lg" } do |f| %>
   <%= render "shared/error_messages", object: order %>

  <div class="mb-6">
    <%= f.label :first_name, "First name", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.input :first_name, label: false, error: false, input_html: { class: "text-sm rounded-lg block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <div class="mb-6">
    <%= f.label :last_name, "Last name", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.input :last_name, label: false, error: false, input_html: { class: "block p-2.5 w-full text-sm rounded-lg border bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <div class="mb-6">
    <%= f.label :address, "Your address", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.input :address, label: false, error: false, as: :string, input_html: { class: "w-full text-sm rounded-lg block p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <div class="mb-6">
    <%= f.label :phone, "Your phone", class: "block mb-2 text-sm font-medium text-white" %>
    <%= f.input :phone, label: false, error: false, input_html: { min: 0, class: "w-full text-sm rounded-lg block p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500" } %>
  </div>

  <%= f.submit "Submit", class: "text-white focus:ring-4 focus:outline-none font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center bg-green-700 hover:bg-green-900 focus:ring-green-800 cursor-pointer" %>
<% end %>
