<% flash.each do |type, msg| %>
  <% if type == "success" || type == "notice" %>
    <div class="m-2.5 p-4 text-sm rounded-lg bg-gray-800 text-green-400 border border-green-300">
      <span class="font-medium">
        <%= msg %>
      </span>
    </div>
  <% else %>
    <div class="p-4 m-2.5 text-sm rounded-lg bg-gray-800 text-red-400 border border-red-800">
      <span class="font-medium">
        <%= msg %>
      </span>
    </div>
  <% end %>
<% end %>
